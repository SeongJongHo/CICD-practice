name: TEST-CI

on:
  pull_request:
    branches:
      - main

jobs:
  test:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Set up JDK 17
      uses: actions/setup-java@v2
      with:
        java-version: '17'

    - name: Run tests
      run: |
        ./gradlew test
        if [ $? -eq 0 ]; then
            echo "success"
          else
            echo "fail"
            exit 1
          fi
